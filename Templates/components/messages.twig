<div class="messages">
    {% for message in messages %}
        <div class="alert alert-{{ message.type }} alert-dismussible fade show" role="alert">
            {{ message.message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
</div>