{% extends "index.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <h2 class="text-center">{{ user.getUsername() }}'s Dashboard</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <h3 class="text-center">{{ totalTime }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <ul class="list-group">
                {% for entry in entries %}
                    <a href="{{ base }}/entry/{{ entry.getId() }}" class="list-group-item">{{ entry.getDate() }}</a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}