{% extends "index.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <h2 class="text-center">{{ user.getUsername() }}'s Dashboard</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            {# TODO: display in green if positiv, red if negativ #}
            <h3 class="text-center">{{ totalTime }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <ul class="list-group">
                {% for entry in entries %}
                    {# TOOD: date parameter configurable per user #}
                    {% set difference = entry.getWorktimeDifference() %}
                    <a href="{{ base }}/entry/{{ entry.getId() }}" class="list-group-item text-decoration-none text-dark {% if difference.flag == '-' %}bg-danger{% else %}bg-success{% endif %}">{{ entry.getDate()|date("Y.m.d") }} ({{ difference.print }})</a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}